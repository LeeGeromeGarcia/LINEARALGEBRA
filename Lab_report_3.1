plt.scatter(spanRx,spanRy, s=10, alpha=1, color='magenta')

plt.xlim(-40, 40)
plt.ylim(-40, 40)

plt.axhline(y=0, color='k')
plt.axvline(x=0, color='k')


plt.title("Activity 3.1")
plt.grid()
plt.show()

