Vector1 = [(3,2,1,-4)]
z = []

for numbers in Vector1:
    for number in numbers:
        square1 = number **2
        z.append(square1)

print('Vector 1:                    ',Vector1)
print('Square of Vector 1 is        ',z)
print('The sum of all numbers:      ',sum(z))
print('The square root of the sum:  ',sum(z)**(1/2))
print('#'*100)

